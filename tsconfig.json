{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "es2017", "es2019"],
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017",
    "baseUrl": "./app/javascript",
    "traceResolution": false,
  },
  "include": [
    "**/*.ts",
  ],
  "compileOnSave": false,
  "traceResolution": true
}
